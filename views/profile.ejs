<!DOCTYPE html>
<html lang="en">
<head>
	<title><%= title %></title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords" content=""
	/>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="/css/fontawesome-all.css">

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2" style="margin-top: 3em">
                <a href="/">Home</a>
                <h3>User Profile</h3>
                <hr>
                <h4>My Orders</h4>
                <%if (orders.length == 0) { %>
                    <p style="font-weight: 500; font-size: larger; color: crimson; margin-top: 1em;">You have no order, kindly make a purchase.</p>
                <% } else { %>
                    <% orders.forEach(function(order) { %>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <ul class="list-group">
                                    <% order.cart.forEach(function(cart) {%>
                                        <li class="list-group-item">
                                            <% let sub = parseFloat(cart.qty * cart.price).toFixed(2) %>
                                            <% let sub2 = parseFloat(cart.qty * cart.discount_price).toFixed(2) %>
                                            <% if(cart.discount_price == "NaN") { %>
                                                <span class="badge">$<%= sub %></span>
                                            <% } else { %>
                                                <span class="badge">$<%= sub2 %></span>
                                            <% } %>
                                            <strong style="font-size: larger;">Product:</strong>  <%= cart.title %> | 
                                            <strong style="font-size: larger;">Quantity:</strong> <%= cart.qty %> Units
                                        </li>
                                    <% }) %>    
                                </ul>
                            </div>
                            <div class="panel-footer">
                                <li class="list-group-item">
                                    <span class="pull-right"> <strong> Date: </strong><%= order.createdAt %> </span>
                                    <strong style="font-size: larger;"> Price: $<%= order.total %></strong>
                                </li>   
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>

    <div class="copy-right py-3" style="margin-top: 4rem;">
        <div class="container">
            <p class="text-center text-white">Â© Joyz Store. All rights reserved </p>
        </div>
    </div>
    <script src="/js/jquery-2.2.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</body>
</html>